<!DOCTYPE html>
<html>

<%- include('./modules/head') %>

    <body>
        <div id="wrapper">
            <%- include('./modules/nav') %>
                <%- include('./modules/side-nav') %>
                    <div id="page-wrapper">


                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">All Staffs</h1>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Registered staffs
                                    </div>
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Name</th>
                                                        <th>Mobile</th>
                                                        <th>Address</th>
                                                        <th>Eamil</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if(mechanic.length!=0){ for(i=0;i<mechanic.length;i++){%>
                                                        <tr>
                                                            <td>
                                                                <%=i+1%>
                                                            </td>
                                                            <td>
                                                                <%= mechanic[i].name%>
                                                            </td>
                                                            <td>
                                                                <%= mechanic[i].mobile%>
                                                            </td>
                                                            <td>
                                                                <%= mechanic[i].address%>
                                                            </td>
                                                            <td>
                                                                <%= mechanic[i].email%>
                                                            </td>
                                                            <td>
                                                                <%if(mechanic[i].status=='0') {%>
                                                                    <a class="btn btn-success"
                                                                        href="/admin/update-mechanic/<%= mechanic[i].login_id%>">Approve</a>&nbsp;&nbsp;
                                                                    <a class="btn btn-danger"
                                                                        href="/admin/reject-mechanic/<%= mechanic[i].login_id%>">Reject</a>
                                                                    <%}else if(mechanic[i].status==1){ %>
                                                                        <a class="btn btn-danger"
                                                                            href="/admin/reject-mechanic/<%= mechanic[i].login_id%>">Delete</a>&nbsp;&nbsp;

                                                                        <%} else{%>
                                                                            <a class="btn btn-danger"
                                                                                href="/admin/reject-mechanic/<%= mechanic[i].login_id%>">Delete</a>&nbsp;&nbsp;
                                                                            <a class="btn btn-success"
                                                                                href="/admin/restore-mechanic/<%= mechanic[i].login_id%>">Restore</a>
                                                                            <%}%>
                                                            </td>
                                                        </tr>
                                                        <%}}else{ %>

                                                            <td colspan="6"
                                                                style="padding-top: 45px; text-align: center; font-size: large; height: 120px;">
                                                                No data found
                                                            </td>
                                                            <% }%>%>%>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>


                    </div>

        </div>
        <script src="assets/plugins/jquery-1.10.2.js"></script>
        <script src="assets/plugins/bootstrap/bootstrap.min.js"></script>
        <script src="assets/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="assets/plugins/pace/pace.js"></script>
        <script src="assets/scripts/siminta.js"></script>
        <script src="assets/plugins/dataTables/jquery.dataTables.js"></script>
        <script src="assets/plugins/dataTables/dataTables.bootstrap.js"></script>
        <script>
            $(document).ready(function () {
                $('#dataTables-example').dataTable();
            });
        </script>

    </body>

</html>