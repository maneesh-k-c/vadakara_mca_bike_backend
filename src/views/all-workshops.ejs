<!DOCTYPE html>
<html>

<%- include('./modules/head') %>

<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!-- navbar top -->
        <%- include('./modules/nav') %>
        <!-- end navbar top -->

        <!-- navbar side -->
        <%- include('./modules/side-nav') %>
        <!-- end navbar side -->
        <!--  page-wrapper -->
        <div id="page-wrapper">

            
            <div class="row">
                 <!--  page header -->
                <div class="col-lg-12">
                    <h1 class="page-header">All workshops</h1>
                </div>
                 <!-- end  page header -->
            </div>
          
            <div class="row">
                <div class="col-lg-12">
                
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Registered workshops
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Address</th>
                                            <th>Eamil</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(workshop.length!=0){ 
                                            for(i=0;i<workshop.length;i++){%>
                                        <tr>
                                            <td><%=i+1%></td>
                                            <td><%= workshop[i].name%></td>
                                            <td><%= workshop[i].mobile%></td>
                                            <td><%= workshop[i].address%></td>
                                            <td><%= workshop[i].email%></td>
                                            <td>
                                                <%if(workshop[i].status=='0') {%>
                                                    <a class="btn btn-success"
                                                        href="/admin/update-workshop/<%= workshop[i].login_id%>">Approve</a>&nbsp;&nbsp;
                                                    <a class="btn btn-danger"
                                                        href="/admin/reject-workshop/<%= workshop[i].login_id%>">Reject</a>
                                                    <%}else if(workshop[i].status==1){ %>
                                                        <a class="btn btn-danger"
                                                            href="/admin/reject-workshop/<%= workshop[i].login_id%>">Delete</a>&nbsp;&nbsp;
                                                       
                                                        <%} else{%>
                                                            <a class="btn btn-danger"
                                                            href="/admin/reject-workshop/<%= workshop[i].login_id%>">Delete</a>&nbsp;&nbsp;
                                                        <a class="btn btn-success"
                                                            href="/admin/restore-workshop/<%= workshop[i].login_id%>">Restore</a>
                                                            <%}%>
                                            </td>
                                        </tr>
                                        <%}}else{ %>

                                            <td colspan="6"
                                                style="padding-top: 45px; text-align: center; font-size: large; height: 120px;">
                                                No data found
                                            </td>
                                            <% }%>%>%>
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                   
                </div>
              
            </div>
           
          
        </div>
        <!-- end page-wrapper -->

    </div>
    <!-- end wrapper -->

    <!-- Core Scripts - Include with every page -->
    <script src="assets/plugins/jquery-1.10.2.js"></script>
    <script src="assets/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="assets/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="assets/plugins/pace/pace.js"></script>
    <script src="assets/scripts/siminta.js"></script>
    <!-- Page-Level Plugin Scripts-->
    <script src="assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>

</body>

</html>
